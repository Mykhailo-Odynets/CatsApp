<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:CatsApp.Models"
             x:Class="CatsApp.Views.DetailsPage"
             Title="Cat Details">

    <StackLayout Padding="10">
        <Image Source="{Binding SelectedCat.url}" HeightRequest="300" Aspect="AspectFill" />
        <Label Text="ID:" FontSize="Medium" />
        <Label Text="{Binding SelectedCat.id}" FontSize="Large" />
        <Label Text="Width:" FontSize="Medium" />
        <Label Text="{Binding SelectedCat.width}" FontSize="Large" />
        <Label Text="Height:" FontSize="Medium" />
        <Label Text="{Binding SelectedCat.height}" FontSize="Large" />
    </StackLayout>
    
</ContentPage>