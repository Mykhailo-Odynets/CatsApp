<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CatsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CatsApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="CatsApp">

    <Shell.Resources>
        <Style TargetType="ShellContent">
            <Setter Property="Title" Value="Default Title" />
            <Setter Property="Icon" Value="default_icon.png" />
            <Setter Property="Shell.BackgroundColor" Value="Green" />
            <Setter Property="Shell.ForegroundColor" Value="Black" />
        </Style>
    </Shell.Resources>

    <ShellContent
        Title="Cats"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

</Shell>
